<form autocomplete="off">
  <header class="sheet-header">
    <img src="{{actor.img}}" data-edit="img" />
    <section class="sheet-header__character-info">
      <input type="text" value="{{actor.name}}" />
      
      <input readonly value="{{actor.system.adventurerLevel}}" />
      
      <div class="meter meter--hp">
        <input type="text" data-dtype="Number" name="system.hp.value" value="{{actor.system.hp.value}}" />/
        <input readonly data-dtype="Number" value="{{actor.system.hp.max}}" />
        <progress value="{{actor.system.hp.value}}" max="{{actor.system.hp.max}}" />
      </div>

      <div class="meter meter--mp">
        <input type="text" data-dtype="Number" name="system.mp.value" value="{{actor.system.mp.value}}" />/
        <input readonly data-dtype="Number" value="{{actor.system.mp.max}}" />
        <progress value="{{actor.system.mp.value}}" max="{{actor.system.mp.max}}" />
      </div>

      <div class="defenses">
        <input readonly data-dtype="Number" value="{{actor.system.evasion}}" />
        <input readonly data-dtype="Number" value="{{actor.system.defense}}" />
        <input readonly data-dtype="Number" value="{{actor.system.fortitude}}" />
        <input readonly data-dtype="Number" value="{{actor.system.willpower}}" />
      </div>

      <div class="movement">
        <input readonly data-dtype="Number" value="{{actor.system.movement.limited}}" />
        <input readonly data-dtype="Number" value="{{actor.system.movement.normal}}" />
        <input readonly data-dtype="Number" value="{{actor.system.movement.full}}" />
      </div>
    </section>
  </header>
  <nav class="">

  </nav>
  <main class="sheet-body">

    <div class="inventory">
      <h2>Weapons</h2>
      {{#each actor.system.weapons}}
        <sw-weapon-card uuid="{{uuid}}"></sw-weapon-card>
      {{/each}}

      <h2>Armor</h2>
      {{#each actor.system.armor}}
        <sw-armor-card></sw-armor-card>
      {{/each}}
    </div>

  </main>
</form>